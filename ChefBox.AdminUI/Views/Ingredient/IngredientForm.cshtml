@using ChefBox.AdminUI.ViewModels.Ingredient
@model IngredientFormViewModel
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Add new ingredient</h4>
                <form id="ingredientForm" asp-controller="Ingredient"
                      asp-action="IngredientForm" method="post">
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" />
                            <span id="nameValidation" class="text-danger" asp-validation-for="Name"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label asp-for="Description"></label>
                            <textarea asp-for="Description"
                                      class="form-control" rows="5">
                            </textarea>
                            <span id="descriptionValidation" class="text-danger" asp-validation-for="Description"></span>
                        </div>
                    </div>
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-primary float-right">Save</button>
                    <a asp-controller="Ingredient" asp-action="Index" class="btn btn-default float-right mx-2">Cancel</a>

                </form>

            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/Views/Ingredient/IngredientForm.js"></script>
}


